@model ParseReume.Models.ReadResumeData

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="card-body card-padding">


    <div class="tab-content">
        <!--First Tab Starts-->
        <div class="tab-pane active animated fadeInRight in">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "langform", @class = "form-horizontal" }))
            {
                <div class="form-group ">
                    <label for="text" class="col-sm-2 control-label">
                        Upload resume<small>(384*202)</small>
                    </label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            @Html.TextBoxFor(model => model.flFile, new { type = "file", multiple = "true", ValidationGroup = "user" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary btn-sm" name="btnsubmit" value="Submit" id="btnsubmit">Submit</button>
                    </div>
                </div>
            }

            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    First name
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Middle Name
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Last name
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Gender
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Address
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.Address1, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Email Address
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Phone Numbers
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.PhoneNumbers, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Summarry Description
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextAreaFor(m => m.SummaryDescription, new { @class = "form-control input-sm", ValidationGroup = "user", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Location
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.Location, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="text" class="col-sm-2 control-label">
                    Zipcode
                </label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="text" class="col-sm-2 control-label">
                Skills
            </label>
            <div class="col-sm-10">
                <div class="fg-line">
                    @Html.TextBoxFor(m => m.Skills, new { @class = "form-control input-sm", ValidationGroup = "user", MaxLength = "500", autocomplete = "off", autofocus = "autofocus" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <iframe width="800" height="500" src="@Model.HTMLfilePath"></iframe>
        </div>
    </div>

    <!--First Tab Ends-->
    <!-- Form Controls Ends Here-->
</div>

